html,
body
  size 100%
  background $MINE_SHAFT
  color $GRAY
  margin 0
  font-family 'Roboto', sans-serif

svg
  size 32px

ul
  list-style none
  padding 0
  margin 0

label
  display block
  font-size 13px
  color rgba($WHITE, 0.7)

input,
textarea
  display block
  font-size 13px
  margin 6px 0

label
  user-select none
  cursor pointer

h1, .h1
  color $ALTO
  font-family 'Lato', sans-serif
  font-size 24px
  margin 10px 0

h1 + p
  margin-top 0

p
  font-size 15px
  line-height 1.3em
  margin 10px 0
  color $GRAY
  strong
    color $ALTO
    font-weight 300

::selection
    background-color $CINNABAR
    color $ALTO

::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 4px $MINE_SHAFT
  background-color $MINE_SHAFT
::-webkit-scrollbar-corner
  background-color $MINE_SHAFT
::-webkit-scrollbar
  size 4px
  background-color $MINE_SHAFT
::-webkit-scrollbar-thumb
  background-color rgba($TUNDORA, 0.7)
::-webkit-scrollbar-thumb:hover
  background-color $TUNDORA