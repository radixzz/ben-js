@import '~styles/common'

.FormTextArea
  position relative
  margin 10px 0
  textarea
    width 100%
    font-size 13px
    color $GRAY
    background $MINE_SHAFT
    outline 1px solid $MINE_SHAFT_PLUS
    border none
    line-height 1.2
    padding 5px
    resize none
    &:focus
      color $ALTO
      outline 1px solid $TUNDORA
