@import '~styles/common'

.LabelEdit
  display inline-flex
  align-items center
  position relative
  color white
  font-size 16px
  overflow hidden
  form
    display inline-block
  input
    font-size 16px
    padding 0
    outline none
    color $WHITE
    background transparent
    border none
    margin 0
    &:focus
      outline none

.LabelEdit-Text
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.LabelEdit-Icon
  flex 0 0 auto
  margin-left 4px
  cursor pointer
  padding 3px
  padding-bottom 5px
  size 22px
  opacity 0.5
  &:hover
    opacity: 1